#!/bin/bash
pushd ${BASEDIR}
stage3=$(${PARSERS}/config/getconfig stage3)


if [ -f "${BASEDIR}/build-binary-assets/stage3/${stage3}" ]; then
   exit 0
fi

stage3_url=$(${PARSERS}/config/getconfig stage3url)
stage3_mirror=$(${PARSERS}/config/getconfig stage3mirror)

latest_image=$(wget "${stage3_url}" -O - | tail -n 1 | cut -f 1 -d ' ')

mkdir -p ${BASEDIR}/build-binary-assets/stage3/

wget ${stage3_mirror}/${latest_image} -O "${BASEDIR}/build-binary-assets/stage3/${stage3}"

wget ${stage3_mirror}/$(wget "${stage3_url}" -O - | tail -n 1 | cut -f 1 -d ' ' ) -O "${BASEDIR}/build-binary-assets/stage3/${stage3}"
